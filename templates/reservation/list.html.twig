{% extends 'bootstrap_base.html.twig' %}

{% block title %}Reservation List{% endblock %}

{% block body %}
    <div class="container mt-5">
        <ul>
            {% for reservation in reservations %}
                <li>
                    {{ reservation.user.firstName }} {{ reservation.user.lastName }} {{ reservation.room.name }} |
                    <a class="btn btn-primary" href="{{ path('app_reservation_edit', {id: reservation.id }) }}">Edit</a> |
                    <a class="btn btn-primary" href="{{ path('app_reservation_equipment_list', {idReservation: reservation.id }) }}">Equipment</a> |
                    {{ include('_partials/_delete_form.html.twig', {entity: reservation, path: 'app_reservation_delete'}) }}
                </li>
            {% endfor %}
        </ul>
    </div>
    <a href="{{ path('app_reservation_new') }}" class="btn btn-primary">Create Reservation</a>
{% endblock %}
