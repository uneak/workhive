{% extends 'layout/page_list.html.twig' %}

{% block title %}Room Equipment List{% endblock %}


{% block list_title %}role rate{% endblock %}

{% block list_header %}
    <tr>
        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Room</th>
        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Role</th>
        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Rate</th>
        <th class="text-secondary opacity-7"></th>
    </tr>
{% endblock %}

{% block list_body %}
    {% for roomRoleRate in roomRoleRates %}
        <tr>
            <td>
                <div class="d-flex px-2 py-1">
                    <div class="d-flex flex-column justify-content-center">
                        <h6 class="mb-0 text-sm">{{ roomRoleRate.room.name }}</h6>
                    </div>
                </div>
            </td>

            <td>
                <p class="text-xs font-weight-bold mb-0">{{ roomRoleRate.userRole.value }}</p>
            </td>
            <td>
                <p class="text-xs font-weight-bold mb-0">{{ roomRoleRate.hourlyRate }}</p>
            </td>
            <td class="align-middle">
                <a class="text-secondary font-weight-bold text-xs"
                   href="{{ path('app_admin_room_role_rate_edit', {id: roomRoleRate.id, idRoom: room.id}) }}">Edit</a>
                |
                {{ include('admin/room/role_rate/_delete_form.html.twig', {entity: roomRoleRate, path: 'app_admin_room_role_rate_delete'}) }}
            </td>
        </tr>
    {% endfor %}
{% endblock %}

{% block list_actions %}
    <a href="{{ path('app_admin_room_role_rate_new', {idRoom: room.id}) }}" class="btn btn-primary">Create
        Room rate</a>
{% endblock %}
