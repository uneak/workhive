{% extends 'layout/page_list.html.twig' %}

{% block title %}Room List{% endblock %}



{% block list_title %}role rate{% endblock %}

{% block list_header %}
    <tr>
        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Name</th>
        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Capacity</th>
        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Area</th>
        <th class="text-secondary opacity-7"></th>
    </tr>
{% endblock %}

{% block list_body %}
    {% for room in rooms %}
        <tr>
            <td>
                <div class="d-flex px-2 py-1">
                    <div class="d-flex flex-column justify-content-center">
                        <h6 class="mb-0 text-sm">{{ room.name }}</h6>
                    </div>
                </div>
            </td>

            <td>
                <p class="text-xs font-weight-bold mb-0">{{ room.capacity }}</p>
            </td>
            <td>
                <p class="text-xs font-weight-bold mb-0">{{ room.area }}</p>
            </td>
            <td class="align-middle">
                <a class="text-secondary font-weight-bold text-xs" href="{{ path('app_admin_room_edit', {id: room.id }) }}">Edit</a> |
                <a class="text-secondary font-weight-bold text-xs" href="{{ path('app_admin_room_equipment_list', {idRoom: room.id }) }}">Equipment</a> |
                <a class="text-secondary font-weight-bold text-xs" href="{{ path('app_admin_room_role_rate_list', {idRoom: room.id }) }}">Rate</a> |
                <a class="text-secondary font-weight-bold text-xs" href="{{ path('app_admin_room_schedule_list', {idRoom: room.id }) }}">Schedule</a> |
                {{ include('_partials/_delete_form.html.twig', {entity: room, path: 'app_admin_room_delete'}) }}
            </td>
        </tr>
    {% endfor %}
{% endblock %}

{% block list_actions %}
    <a href="{{ path('app_admin_room_new') }}" class="btn btn-primary">Create Room</a>
{% endblock %}
