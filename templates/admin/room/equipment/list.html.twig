{% extends 'layout/page_list.html.twig' %}

{% block title %}Room Equipment List{% endblock %}

{% block list_title %}room equipment{% endblock %}

{% block list_header %}
    <tr>
        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Room</th>
        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Equipement</th>
        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Quantity</th>
        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Assigned At</th>
        <th class="text-secondary opacity-7"></th>
    </tr>
{% endblock %}

{% block list_body %}
    {% for roomEquipment in roomEquipments %}
        <tr>
            <td>
                <div class="d-flex px-2 py-1">
                    <div>
                        <img src="{{ asset('images/team-2.jpg') }}" class="avatar avatar-sm me-3 border-radius-lg"
                             alt="user1">
                    </div>
                    <div class="d-flex flex-column justify-content-center">
                        <h6 class="mb-0 text-sm">{{ roomEquipment.room.name }}</h6>
                    </div>
                </div>
            </td>
            <td>
                <p class="text-xs font-weight-bold mb-0">{{ roomEquipment.equipment.name }}</p>
                <p class="text-xs text-secondary mb-0"></p>
            </td>
            <td class="align-middle text-center text-sm">
                <p class="text-xs font-weight-bold mb-0"><strong>{{ roomEquipment.quantity }}</strong> / {{ roomEquipment.equipment.totalStock }}</p>
            </td>
            <td class="align-middle text-center">
                <span class="text-secondary text-xs font-weight-bold">{{ roomEquipment.assignedAt|date('d/m/Y') }}</span>
            </td>
            <td class="align-middle">
                <a class="text-secondary font-weight-bold text-xs"
                   href="{{ path('app_admin_room_equipment_edit', {id: roomEquipment.id, idRoom: room.id}) }}">Edit</a>
                {{ include('admin/room/equipment/_delete_form.html.twig', {entity: roomEquipment, path: 'app_admin_room_equipment_delete'}) }}
            </td>
        </tr>
    {% endfor %}
{% endblock %}

{% block list_actions %}
    <a href="{{ path('app_admin_room_equipment_new', {idRoom: room.id}) }}" class="btn btn-light m-0">Create
        Room</a>
{% endblock %}
