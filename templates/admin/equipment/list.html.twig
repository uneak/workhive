{% extends 'layout/page_list.html.twig' %}

{% block title %}equipment List{% endblock %}





{% block list_title %}equipment{% endblock %}

{% block list_header %}
    <tr>
        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Name</th>
        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Stock</th>
        <th class="text-secondary opacity-7"></th>
    </tr>
{% endblock %}

{% block list_body %}
    {% for equipment in equipments %}
        <tr>
            <td>
                <div class="d-flex px-2 py-1">
                    <div class="d-flex flex-column justify-content-center">
                        <h6 class="mb-0 text-sm">{{ equipment.name }}</h6>
                    </div>
                </div>
            </td>
            <td>
                <p class="text-xs font-weight-bold mb-0">{{ equipment.totalStock }}</p>
                <p class="text-xs text-secondary mb-0"></p>
            </td>
            <td class="align-middle">
                <a class="text-secondary font-weight-bold text-xs" href="{{ path('app_admin_equipment_edit', {id: equipment.id }) }}">Edit</a> |
                <a class="text-secondary font-weight-bold text-xs" href="{{ path('app_admin_equipment_rate_list', {idEquipment: equipment.id }) }}">Rate</a> |
                {{ include('_partials/_delete_form.html.twig', {entity: equipment, path: 'app_admin_equipment_delete'}) }}
            </td>
        </tr>
    {% endfor %}
{% endblock %}

{% block list_actions %}
    <a href="{{ path('app_admin_equipment_new') }}" class="btn btn-primary">Create equipment</a>
{% endblock %}
