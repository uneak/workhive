{% extends 'layout/page_grid.html.twig' %}

{% block title %}equipment List{% endblock %}





{% block list_title %}equipment{% endblock %}

{% block list_header %}
{% endblock %}

{% block list_body %}
    <div class="d-grid gap-4 mt-4"
         style="grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));">
        {% for equipment in equipments %}
            <div class="card mt-6" data-animation="true">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <a class="d-block blur-shadow-image">
                        <img
                            src="https://demos.creative-tim.com/test/material-dashboard-pro/assets/img/products/product-1-min.jpg"
                            alt="img-blur-shadow" class="img-fluid shadow border-radius-lg">
                    </a>
                    <div class="colored-shadow"
                         style="background-image: url(&quot;https://demos.creative-tim.com/test/material-dashboard-pro/assets/img/products/product-1-min.jpg&quot;);"></div>
                </div>
                <div class="card-body text-center">
                    <div class="d-flex mt-n6 mx-auto">
                        <a class="btn btn-link text-primary ms-auto border-0" data-bs-toggle="tooltip"
                           data-bs-placement="bottom" title="Refresh">
                            <i class="material-symbols-rounded text-lg">refresh</i>
                        </a>
                        <a href="{{ path('app_admin_equipment_edit', {id: equipment.id }) }}" class="btn btn-link text-info me-auto border-0" data-bs-toggle="tooltip"
                                data-bs-placement="bottom" title="Edit">
                            <i class="material-symbols-rounded text-lg">edit</i>
                        </a>
                    </div>
                    <h5 class="font-weight-normal mt-3">
                        {{ equipment.name }}
                    </h5>
                    <p class="mb-0">
                        {{ equipment.description }}
                    </p>
                </div>
                <hr class="dark horizontal my-0">
                <div class="card-footer d-flex">
                    <p class="font-weight-normal my-auto">Stock : x / {{ equipment.totalStock }}</p>
                    <i class="material-symbols-rounded position-relative ms-auto text-lg me-1 my-auto">place</i>
                    <p class="text-sm my-auto"> Barcelona, Spain</p>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}


{% block list_body_2 %}
    {% for equipment in equipments %}
        <tr>
            <td>
                <div class="d-flex px-2 py-1">
                    <div class="d-flex flex-column justify-content-center">
                        <h6 class="mb-0 text-sm">{{ equipment.name }}</h6>
                    </div>
                </div>
            </td>
            <td>
                <p class="text-xs font-weight-bold mb-0">{{ equipment.totalStock }}</p>
                <p class="text-xs text-secondary mb-0"></p>
            </td>
            <td class="align-middle">
                <a class="text-secondary font-weight-bold text-xs"
                   href="{{ path('app_admin_equipment_edit', {id: equipment.id }) }}">Edit</a> |
                <a class="text-secondary font-weight-bold text-xs"
                   href="{{ path('app_admin_equipment_rate_list', {idEquipment: equipment.id }) }}">Rate</a> |
                {{ include('_partials/_delete_form.html.twig', {entity: equipment, path: 'app_admin_equipment_delete'}) }}
            </td>
        </tr>
    {% endfor %}
{% endblock %}

{% block list_actions %}
    <a href="{{ path('app_admin_equipment_new') }}" class="btn btn-light m-0">Create equipment</a>
{% endblock %}
