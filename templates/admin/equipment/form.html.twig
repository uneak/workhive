{% extends 'layout/admin.html.twig' %}

{% block title %}Equipment Form{% endblock %}

{% block main %}
    <div class="container mt-5">
        <h1 class="mb-4">{{ equipment.id is not null ? 'Edit Equipment' : 'Create Equipment' }}</h1>

        {{ form_start(form, { 'attr': { 'class': 'needs-validation', 'novalidate': 'novalidate' } }) }}

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    {{ form_label(form.name, 'Equipment Name', { 'label_attr': { 'class': 'form-label' } }) }}
                    {{ form_widget(form.name, { 'attr': { 'class': 'form-control', 'placeholder': 'Enter equipment name' } }) }}
                    {{ form_errors(form.name, { 'attr': { 'class': 'text-danger' } }) }}
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    {{ form_label(form.totalStock, 'Total Stock', { 'label_attr': { 'class': 'form-label' } }) }}
                    {{ form_widget(form.totalStock, { 'attr': { 'class': 'form-control', 'placeholder': 'Enter total stock' } }) }}
                    {{ form_errors(form.totalStock, { 'attr': { 'class': 'text-danger' } }) }}
                </div>
            </div>
        </div>

        <div class="form-group mb-3">
            {{ form_label(form.description, 'Description', { 'label_attr': { 'class': 'form-label' } }) }}
            {{ form_widget(form.description, { 'attr': { 'class': 'form-control', 'placeholder': 'Enter equipment description', 'rows': '4' } }) }}
            {{ form_errors(form.description, { 'attr': { 'class': 'text-danger' } }) }}
        </div>

        <div class="form-group mb-3">
            {{ form_label(form.photoFile, 'Equipment Photo', { 'label_attr': { 'class': 'form-label' } }) }}
            {{ form_widget(form.photoFile, { 'attr': { 'class': 'form-control', 'accept': 'image/*' } }) }}
            {{ form_errors(form.photoFile, { 'attr': { 'class': 'text-danger' } }) }}
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a href="{{ path('app_admin_equipment_list') }}" class="btn btn-secondary">Back to List</a>
            <button type="submit" class="btn btn-light m-0">
                {{ equipment.id is not null ? 'Update Equipment' : 'Create Equipment' }}
            </button>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
