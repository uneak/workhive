{% extends 'layout/admin.html.twig' %}

{% block title %}Equipment RoleRate Form{% endblock %}

{% block main %}
    <div class="container mt-5">
        <h1 class="mb-4">{{ equipmentRoleRate.id is not null ? 'Edit Equipment RoleRate' : 'Create Equipment RoleRate' }}</h1>

        {{ form_start(form, { 'attr': { 'class': 'needs-validation', 'novalidate': 'novalidate' } }) }}

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    {{ form_label(form.equipment, 'Equipment', { 'label_attr': { 'class': 'form-label' } }) }}
                    {{ form_widget(form.equipment, { 'attr': { 'class': 'form-select' } }) }}
                    {{ form_errors(form.equipment, { 'attr': { 'class': 'text-danger' } }) }}
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    {{ form_label(form.userRole, 'User Role', { 'label_attr': { 'class': 'form-label' } }) }}
                    {{ form_widget(form.userRole, { 'attr': { 'class': 'form-select' } }) }}
                    {{ form_errors(form.userRole, { 'attr': { 'class': 'text-danger' } }) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    {{ form_label(form.hourlyRate, 'Hourly Rate', { 'label_attr': { 'class': 'form-label' } }) }}
                    {{ form_widget(form.hourlyRate, { 'attr': { 'class': 'form-control', 'placeholder': 'Enter hourly rate' } }) }}
                    {{ form_errors(form.hourlyRate, { 'attr': { 'class': 'text-danger' } }) }}
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a href="{{ path('app_admin_equipment_rate_list', {idEquipment: equipmentRoleRate.equipment.id}) }}" class="btn btn-secondary">Back to List</a>
            <button type="submit" class="btn btn-primary">
                {{ equipmentRoleRate.id is not null ? 'Update Equipment RoleRate' : 'Create Equipment RoleRate' }}
            </button>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
