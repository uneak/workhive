{% extends 'layout/page_list.html.twig' %}

{% block title %}Equipment Equipment List{% endblock %}




{% block list_title %}role rate{% endblock %}

{% block list_header %}
    <tr>
        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Equipement</th>
        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Role</th>
        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Rate</th>
        <th class="text-secondary opacity-7"></th>
    </tr>
{% endblock %}

{% block list_body %}
    {% for equipmentRoleRate in equipmentRoleRates %}
        <tr>
            <td>
                <div class="d-flex px-2 py-1">
                    <div class="d-flex flex-column justify-content-center">
                        <h6 class="mb-0 text-sm">{{ equipmentRoleRate.equipment.name }}</h6>
                    </div>
                </div>
            </td>

            <td>
                <p class="text-xs font-weight-bold mb-0">{{ equipmentRoleRate.userRole.value }}</p>
            </td>
            <td>
                <p class="text-xs font-weight-bold mb-0">{{ equipmentRoleRate.hourlyRate }}</p>
            </td>
            <td class="align-middle">
                <a class="text-secondary font-weight-bold text-xs"
                   href="{{ path('app_admin_equipment_rate_edit', {id: equipmentRoleRate.id, idEquipment: equipment.id}) }}">Edit</a>
                |
                {{ include('admin/equipment/rate/_delete_form.html.twig', {entity: equipmentRoleRate, path: 'app_admin_equipment_rate_delete'}) }}
            </td>
        </tr>
    {% endfor %}
{% endblock %}

{% block list_actions %}
    <a href="{{ path('app_admin_equipment_rate_new', {idEquipment: equipment.id}) }}" class="btn btn-primary">Create
        Equipment</a>
{% endblock %}
