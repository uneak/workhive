{% extends 'layout/page_list.html.twig' %}

{% block title %}user List{% endblock %}
{% block list_title %}user table{% endblock %}

{% block list_header %}
    <tr>
        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Author</th>
        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Function</th>
        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Status</th>
        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Employed</th>
        <th class="text-secondary opacity-7"></th>
    </tr>
{% endblock %}

{% block list_body %}
    {% for user in users %}
        <tr>
            <td>
                <div class="d-flex px-2 py-1">
                    <div>
                        <img src="{{ asset('images/team-2.jpg') }}" class="avatar avatar-sm me-3 border-radius-lg"
                             alt="user1">
                    </div>
                    <div class="d-flex flex-column justify-content-center">
                        <h6 class="mb-0 text-sm">{{ user.firstName }} {{ user.lastName }}</h6>
                        <p class="text-xs text-secondary mb-0">{{ user.email }}</p>
                    </div>
                </div>
            </td>
            <td>
                <p class="text-xs font-weight-bold mb-0">{{ user.userRole.value }}</p>
                <p class="text-xs text-secondary mb-0">Organization</p>
            </td>
            <td class="align-middle text-center text-sm">
                <span
                    class="badge badge-sm bg-gradient-{% if user.status.value == "active" %}success{% else %}danger{% endif %}">{{ user.status.value }}</span>
            </td>
            <td class="align-middle text-center">
                <span class="text-secondary text-xs font-weight-bold">{{ user.createdAt|date('d/m/Y') }}</span>
            </td>
            <td class="align-middle">
                <a class="text-secondary font-weight-bold text-xs"
                   href="{{ path('app_admin_user_edit', {id: user.id }) }}">Edit</a> |
                <a class="text-secondary font-weight-bold text-xs"
                   href="{{ path('app_admin_payment_method_list', {idUser: user.id }) }}">Payment</a> |
                <a class="text-secondary font-weight-bold text-xs"
                   href="{{ path('app_admin_user_show', {id: user.id }) }}">Voir</a> |
                {{ include('_partials/_delete_form.html.twig', {entity: user, path: 'app_admin_user_delete'}) }}
            </td>
        </tr>
    {% endfor %}
{% endblock %}

{% block list_actions %}
    <a href="{{ path('app_admin_user_new') }}" class="btn btn-light m-0">Create user</a>
{% endblock %}
