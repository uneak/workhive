{% extends 'layout/page_list.html.twig' %}

{% block title %}Payment List{% endblock %}
{% block list_title %}Payment table{% endblock %}

{% block list_header %}
    <tr>
        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Label</th>
        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Type</th>
        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Created</th>
        <th class="text-secondary opacity-7"></th>
    </tr>
{% endblock %}

{% block list_body %}
    {% for paymentMethod in paymentMethods %}
        <tr>
            <td>
                <div class="d-flex px-2 py-1">
                    <div>
                        <img src="{{ asset('images/team-2.jpg') }}" class="avatar avatar-sm me-3 border-radius-lg"
                             alt="user1">
                    </div>
                    <div class="d-flex flex-column justify-content-center">
                        <h6 class="mb-0 text-sm">{{ paymentMethod.label }}</h6>
                    </div>
                </div>
            </td>
            <td>
                <p class="text-xs font-weight-bold mb-0">{{ paymentMethod.type }}</p>
            </td>
            <td class="align-middle text-center">
                <span class="text-secondary text-xs font-weight-bold">{{ user.createdAt|date('d/m/Y') }}</span>
            </td>
            <td class="align-middle">
                <a class="text-secondary font-weight-bold text-xs" href="{{ path('app_admin_payment_method_edit', {id: paymentMethod.id, idUser: paymentMethod.user.id }) }}">Edit</a> |
                {{ include('admin/user/payment_method/_delete_form.html.twig', {entity: paymentMethod, path: 'app_admin_payment_method_delete'}) }}
            </td>
        </tr>
    {% endfor %}
{% endblock %}

{% block list_actions %}
    <a href="{{ path('app_admin_payment_method_new', {idUser: user.id, type: 'credit_card' }) }}" class="btn btn-light m-0">Create credit_card</a>
    <a href="{{ path('app_admin_payment_method_new', {idUser: user.id, type: 'bitcoin' }) }}" class="btn btn-light m-0">Create bitcoin</a>
    <a href="{{ path('app_admin_payment_method_new', {idUser: user.id, type: 'bank_transfer' }) }}" class="btn btn-light m-0">Create bank_transfer</a>
    <a href="{{ path('app_admin_payment_method_new', {idUser: user.id, type: 'paypal' }) }}" class="btn btn-light m-0">Create paypal</a>
{% endblock %}
