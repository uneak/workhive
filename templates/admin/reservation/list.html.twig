{% extends 'layout/page_list.html.twig' %}

{% block title %}Reservation List{% endblock %}

{% block list_title %}role rate{% endblock %}

{% block list_header %}
    <tr>
        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Room</th>
        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">User</th>
        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Start At</th>
        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">End At</th>
        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Status</th>
        <th class="text-secondary opacity-7"></th>
    </tr>
{% endblock %}

{% block list_body %}
    {% for reservation in reservations %}
        <tr>
            <td>
                <div class="d-flex px-2 py-1">
                    <div class="d-flex flex-column justify-content-center">
                        <h6 class="mb-0 text-sm">{{ reservation.room.name }}</h6>
                    </div>
                </div>
            </td>

            <td>
                <h6 class="mb-0 text-sm">{{ reservation.user.firstName }} {{ reservation.user.lastName }}</h6>
                <p class="text-xs text-secondary mb-0">{{ reservation.user.email }}</p>
            </td>
            <td>
                <p class="text-xs font-weight-bold mb-0">{{ reservation.startAt|date('d/m/Y H:i') }}</p>
            </td>
            <td>
                <p class="text-xs font-weight-bold mb-0">{{ reservation.endAt|date('d/m/Y H:i') }}</p>
            </td>
            <td class="align-middle text-center text-sm">
                <span
                    class="badge badge-sm bg-gradient-{% if reservation.status.value == "confirmed" %}success{% else %}danger{% endif %}">{{ reservation.status.value }}</span>
            </td>
            <td class="align-middle">

                <a class="text-secondary font-weight-bold text-xs" href="{{ path('app_admin_reservation_edit', {id: reservation.id }) }}">Edit</a> |
                <a class="text-secondary font-weight-bold text-xs" href="{{ path('app_admin_reservation_equipment_list', {idReservation: reservation.id }) }}">Equipment</a> |
                {{ include('_partials/_delete_form.html.twig', {entity: reservation, path: 'app_admin_reservation_delete'}) }}
            </td>
        </tr>
    {% endfor %}
{% endblock %}

{% block list_actions %}
    <a href="{{ path('app_admin_reservation_new') }}" class="btn btn-primary">Create Reservation</a>
{% endblock %}
