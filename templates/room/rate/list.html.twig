{% extends 'bootstrap_base.html.twig' %}

{% block title %}Room Equipment List{% endblock %}

{% block body %}
    <div class="container mt-5">
        <ul>
            {% for roomRoleRate in roomRoleRates %}
                <li>
                    {{ roomRoleRate.userRole.value }} |
                    <a class="btn btn-primary"
                       href="{{ path('app_room_rate_edit', {id: roomRoleRate.id, idRoom: room.id}) }}">Edit</a>
                    |
                    {{ include('room/rate/_delete_form.html.twig', {entity: roomRoleRate, path: 'app_room_rate_delete'}) }}
                </li>
            {% endfor %}
        </ul>
    </div>
    <a href="{{ path('app_room_rate_new', {idRoom: room.id}) }}" class="btn btn-primary">Create
        Room</a>
{% endblock %}
