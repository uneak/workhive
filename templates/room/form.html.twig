{% extends 'bootstrap_base.html.twig' %}

{% block title %}Room Form{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">{{ room.id is defined ? 'Edit Room' : 'Create Room' }}</h1>

        {{ form_start(form, { 'attr': { 'class': 'needs-validation', 'novalidate': 'novalidate' } }) }}
{#        https://symfony.com/doc/current/form/form_customization.html#form-rendering-functions#}

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <strong>{{ form_label(form.name, 'Room Name', { 'label_attr': { 'class': 'form-label' } }) }}</strong>
                    {{ form_widget(form.name, { 'attr': { 'class': 'form-control', 'placeholder': 'Enter the room name' } }) }}
                    {{ form_errors(form.name, { 'attr': { 'class': 'text-danger' } }) }}
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    {{ form_label(form.capacity, 'Capacity', { 'label_attr': { 'class': 'form-label' } }) }}
                    {{ form_widget(form.capacity, { 'attr': { 'class': 'form-control', 'placeholder': 'Enter room capacity' } }) }}
                    {{ form_errors(form.capacity, { 'attr': { 'class': 'text-danger' } }) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    {{ form_label(form.width, 'Width (meters)', { 'label_attr': { 'class': 'form-label' } }) }}
                    {{ form_widget(form.width, { 'attr': { 'class': 'form-control', 'placeholder': 'Enter width in meters' } }) }}
                    {{ form_errors(form.width, { 'attr': { 'class': 'text-danger' } }) }}
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    {{ form_label(form.length, 'Length (meters)', { 'label_attr': { 'class': 'form-label' } }) }}
                    {{ form_widget(form.length, { 'attr': { 'class': 'form-control', 'placeholder': 'Enter length in meters' } }) }}
                    {{ form_errors(form.length, { 'attr': { 'class': 'text-danger' } }) }}
                </div>
            </div>
        </div>

        <div class="form-group mb-3">
            {{ form_label(form.status, 'Status', { 'label_attr': { 'class': 'form-label' } }) }}
            {{ form_widget(form.status, { 'attr': { 'class': 'form-select' } }) }}
            {{ form_errors(form.status, { 'attr': { 'class': 'text-danger' } }) }}
        </div>

        <div class="form-group mb-3">
            {{ form_label(form.description, 'Description', { 'label_attr': { 'class': 'form-label' } }) }}
            {{ form_widget(form.description, { 'attr': { 'class': 'form-control', 'placeholder': 'Optional description of the room', 'rows': '4' } }) }}
            {{ form_errors(form.description, { 'attr': { 'class': 'text-danger' } }) }}
        </div>

        <div class="form-group mb-3">
            {{ form_label(form.photo, 'Room Photo', { 'label_attr': { 'class': 'form-label' } }) }}
            {{ form_widget(form.photo, { 'attr': { 'class': 'form-control', 'accept': 'image/*' } }) }}
            {{ form_errors(form.photo, { 'attr': { 'class': 'text-danger' } }) }}
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a href="{{ path('app_room_list') }}" class="btn btn-secondary">Back to List</a>
            <button type="submit" class="btn btn-primary">
                {{ room.id is defined ? 'Update Room' : 'Create Room' }}
            </button>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
