{% extends 'layout/home.html.twig' %}

{% block title %}Louer la salle : {{ room.name }}{% endblock %}

{% block main %}
    <div class="container mt-5">
        <h1>Résumé de la salle</h1>

        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">{{ room.name }}</h5>
                <p class="card-text">
                    Capacité : {{ room.capacity }} personnes<br>
                    Surface : {{ room.area }} m²<br>
                    Description : {{ room.description ?: 'Aucune description disponible.' }}
                </p>
            </div>
        </div>

        <h2>Choisissez vos dates et un moyen de paiement</h2>

        {{ form_start(form, { 'attr': { 'class': 'needs-validation', 'novalidate': 'novalidate' } }) }}

        <div class="form-group mb-3">
            {{ form_label(form.startAt, 'Date et heure de début', { 'label_attr': { 'class': 'form-label' } }) }}
            {{ form_widget(form.startAt, { 'attr': { 'class': 'form-control', 'placeholder': 'Sélectionnez la date et l\'heure de début' } }) }}
            {{ form_errors(form.startAt, { 'attr': { 'class': 'text-danger' } }) }}
        </div>

        <div class="form-group mb-3">
            {{ form_label(form.endAt, 'Date et heure de fin', { 'label_attr': { 'class': 'form-label' } }) }}
            {{ form_widget(form.endAt, { 'attr': { 'class': 'form-control', 'placeholder': 'Sélectionnez la date et l\'heure de fin' } }) }}
            {{ form_errors(form.endAt, { 'attr': { 'class': 'text-danger' } }) }}
        </div>

        <div class="form-group mb-3">
            {{ form_label(form.payment_method, 'Moyen de paiement', { 'label_attr': { 'class': 'form-label' } }) }}
            {{ form_widget(form.payment_method, { 'attr': { 'class': 'form-select', 'placeholder': 'Sélectionnez votre moyen de paiement' } }) }}
            {{ form_errors(form.payment_method, { 'attr': { 'class': 'text-danger' } }) }}
        </div>

        <button type="submit" class="btn btn-primary">Confirmer la réservation</button>

        {{ form_end(form) }}
    </div>

{% endblock %}
