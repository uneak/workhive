{% extends 'layout/home.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block main %}
    <div class="container mt-5">
        <h1 class="mb-4">Hello Home</h1>
        <p>On a des salles à louer !</p>
        <ul class="list-group">
            {% for room in rooms %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <strong>{{ room.name }}</strong> - {{ room.area }}m²
                    </div>
                    {% if app.user %}
                        <a href="{{ path('app_rent', { id: room.id }) }}" class="btn btn-primary btn-sm">
                            Louer
                        </a>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
