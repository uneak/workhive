{% extends 'bootstrap_base.html.twig' %}

{% block title %}equipment List{% endblock %}

{% block body %}
    <div class="container mt-5">
        <ul>
            {% for equipment in equipments %}
                <li>
                    {{ equipment.name }} |
                    <a class="btn btn-primary" href="{{ path('app_equipment_edit', {id: equipment.id }) }}">Edit</a> |
                    <a class="btn btn-primary" href="{{ path('app_equipment_rate_list', {idEquipment: equipment.id }) }}">Rate</a> |
                    {{ include('_partials/_delete_form.html.twig', {entity: equipment, path: 'app_equipment_delete'}) }}
                </li>
            {% endfor %}
        </ul>
    </div>
    <a href="{{ path('app_equipment_new') }}" class="btn btn-primary">Create equipment</a>
{% endblock %}
