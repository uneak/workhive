{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa; /* Fond gris clair */
        }
        .card {
            margin: auto;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Ombre */
        }
        .list-group-item {
            display: flex;
            justify-content: space-between;
            align-items: center; /* Aligne verticalement */
        }
        .card {
            max-width: 30rem;
        }
        .card-body.form-section {
            background-color: #e9ecef; /* Fond gris clair pour le formulaire */
        }
        .btn {
            border-radius: 0; /* Boutons carrés */
            width: 40px; /* Largeur fixe pour carrés parfaits */
            height: 40px; /* Hauteur fixe pour carrés parfaits */
            display: inline-flex;
            justify-content: center;
            align-items: center;
            padding: 0;
            font-size: 1.2rem; /* Taille des icônes */
        }
        .btn-sm {
            width: 30px; /* Carrés plus petits pour les boutons minuscules */
            height: 30px;
            font-size: 1rem;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-5 d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="card">
            <div class="card-body">
                <figure>
                    <blockquote class="blockquote">
                        <p>Liste des tâches</p>
                    </blockquote>
                    <figcaption class="blockquote-footer">
                        Gérez efficacement vos tâches quotidiennes <cite title="Source Title">cochez celles que vous avez terminées ou supprimez celles dont vous n’avez plus besoin.</cite>
                    </figcaption>
                </figure>
            </div>
            <ul class="list-group list-group-flush">
                {% for task in tasks %}
                    <li class="list-group-item">
                        <div class="d-flex align-items-center">
                            <input type="checkbox"
                                   class="form-check-input me-2"
                                   onchange="window.location.href='/toggle/{{ task.id }}';"
                                {{ task.complete ? 'checked' }}
                            >
                            <span class="{{ task.complete ? 'text-decoration-line-through text-muted' : '' }}">
                                {{ task.label }}
                            </span>
                        </div>
                        <a href="/delete/{{ task.id }}" class="btn btn-danger btn-sm">
                            <i class="bi bi-x"></i> <!-- Icône de suppression -->
                        </a>
                    </li>
                {% else %}
                    <li class="list-group-item text-center">
                        Pas de tâches pour le moment.
                    </li>
                {% endfor %}
            </ul>
            <div class="card-body form-section">
                <form method="POST" action="/add" class="mb-0">
                    <div class="input-group">
                        <input type="text" name="task_name" class="form-control" placeholder="Nouvelle tâche" required>
                        <button class="btn btn-primary" type="submit">
                            <i class="bi bi-plus"></i> <!-- Icône d'ajout -->
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
